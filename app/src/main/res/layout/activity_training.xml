<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:screenOrientation="portrait"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TrainingActivity"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/training_LBL_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coaches list"
        android:textSize="35dp"
        android:textColor="#CF0B0B"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/Training_IMG_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:tag="back"
        />

    <LinearLayout

    android:id="@+id/training_LAY_liner1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#AB424242"
    android:layout_below="@id/training_LBL_Title"
    android:layout_marginTop="20dp"
    >
    <ImageView
        android:id="@+id/training_IMG_hand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_gravity="left"
        />
</LinearLayout>



    <RelativeLayout
        android:id="@+id/training_LAY_relfirst"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#AB424242"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/training_LBL_Title"
        android:layout_marginTop="20dp"
        >

        <TextView

            android:id="@+id/training_LBL_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yosi choen\nMuscle\n26\n"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:tag="name"
            />
    </RelativeLayout>

<LinearLayout
    android:id="@+id/training_LAY_liner2"
    android:layout_below="@id/training_LAY_liner1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#AB424242"
    android:layout_marginTop="15dp"
    >
    <ImageView
        android:id="@+id/training_IMG_hand1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        />
</LinearLayout>



    <RelativeLayout
        android:id="@+id/training_LAY_relsecond"
        android:layout_below="@id/training_LAY_relfirst"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#AB424242"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        >

        <TextView

            android:id="@+id/training_LBL_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:tag="name1"
            android:text="Dafna levi\nShape\n22\n"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

<LinearLayout
    android:id="@+id/training_LAY_liner3"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#AB424242"
    android:layout_below="@id/training_LAY_liner2"
    android:layout_marginTop="15dp"
    >
    <ImageView
        android:id="@+id/training_IMG_hand2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        />
</LinearLayout>



    <RelativeLayout
        android:id="@+id/training_LAY_relthird"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#AB424242"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/training_LAY_relsecond"
        android:layout_marginTop="15dp"
        >


        <TextView

            android:id="@+id/training_LBL_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shlomi kick\nBody Builder\n33\n"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:tag="name3"
            />
    </RelativeLayout>

<LinearLayout
    android:id="@+id/training_LAY_liner4"
    android:layout_below="@id/training_LAY_liner3"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#AB424242"
    android:layout_marginTop="15dp"
    >
    <ImageView
        android:id="@+id/training_IMG_hand4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
