            />
    </RelativeLayout>

<LinearLayout
    android:id="@+id/training_LAY_liner5"
    android:layout_below="@id/training_LAY_liner4"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#AB424242"
    android:layout_marginTop="15dp"
    >
    <ImageView
        android:id="@+id/training_IMG_hand5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        />
</LinearLayout>



    <RelativeLayout
        android:id="@+id/training_LAY_fifth"
        android:layout_below="@id/training_LAY_fourth"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#AB424242"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        >



        <TextView

            android:id="@+id/training_LBL_name5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maor zagori\nYoga\n42\n"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:tag="name5"
            />
    </RelativeLayout>



</RelativeLayout>